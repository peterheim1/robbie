<?xml version="1.0"?>
<robot name="robbie">
        <link name="base_link">
                <visual>
                        <origin xyz="0 0 0.10" rpy="0 0 0" />
                                <geometry>
                                        <box size="0.41 0.34 0.20" />
                                </geometry>
                        <material name="Cyan1">
                                <color rgba="0 1 1 1.0"/>
                        </material>
                </visual>
        </link>
       
        <link name="base_laser">
                <visual>
                        <origin xyz="0 0 .05" rpy="0 0 0" />
                                <geometry>
                                        <cylinder radius="0.025" length="0.10" />
                                </geometry>
                                <material name="black">
                                        <color rgba="0 0 0 1"/>
                                </material>
                </visual>
        </link>
         
        <link name="upper_base_link">
                <visual>
                        <origin xyz="0 0 0.075" rpy="0 0 0" />
                        <geometry>
                                <box size="0.075 0.15 0.15" />
                        </geometry>
                        <material name="Cyan2">
                                <color rgba="0 0.5 0.5 0"/>
                        </material>
                </visual>
        </link>

         <link name="head_pan_link">
                <visual>
                        <origin xyz="0 0 0.0225" rpy="0 0 0" />
                        <geometry>
                                <box size="0.05 0.045 0.045" />
                        </geometry>
                <material name="Green1">
                                <color rgba="0 1 0 1.0"/>
                        </material>
                </visual>
                <collision>
                        <origin xyz="0 0 0.0225" rpy="0 0 0" />
                        <geometry>
                                <box size="0.05 0.045 0.045" />
                        </geometry>
                </collision>
      
        </link>
        
        <link name="head_tilt_link">
                <visual>
                        <origin xyz="0 0 0.02" rpy="0 0 0" />
                        <geometry>
                                <box size="0.03 0.038 0.04" />
                        </geometry>
                <material name="Green2">
                                <color rgba="0.1 0.8 0 1.0"/>
                        </material>
                </visual>
                <collision>
                        <origin xyz="0 0 0.02" rpy="0 0 0" />
                        <geometry>
                                <box size="0.03 0.038 0.04" />
                        </geometry>
                </collision>
        <inertial>
                <mass value="1" />
                <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                         iyy="1.0" iyz="0.0"
                         izz="1.0" />
        </inertial>
        </link>
  
        <link name="head_link">
                <visual>
                        <origin xyz="0 0 0.03" rpy="0 0 0" />
                        <geometry>
                                <box size="0.01 0.13 0.06" />
                        </geometry>
                        <material name="white">
                                <color rgba="1 1 1 1"/>
                        </material>
                </visual>
        </link>


  <joint name="joint1" type="fixed">
    <parent link="base_link"/>
    <child link="base_laser"/>
    <origin xyz="0.21 0.0 .05" rpy="0 0 0" />
  </joint>

  <joint name="joint2" type="fixed">
    <parent link="base_link"/>
    <child link="upper_base_link"/>
    <origin xyz="0.12 0 0.2" rpy="0 0 0" />
  </joint>

  <joint name="head_pan_joint" type="revolute">
    <parent link="upper_base_link"/>
    <child link="head_pan_link"/>
    <origin xyz="0 0 .15" rpy="0 0 0" />
    <axis xyz="0 0 1" />
    <limit lower="-3.1416" upper="3.1416" effort="10" velocity="3" />
  </joint>

   <joint name="head_tilt_joint" type="revolute">
        <parent link="head_pan_link" />
        <child link="head_tilt_link" />
        <origin xyz="0 0 0.04" rpy="0 0 0" />
        <axis xyz="0 1 0" />
        <limit lower="-1.57" upper="1.57" effort="10" velocity="3" />
        </joint>

  <joint name="head_link_joint" type="fixed">
    <parent link="head_tilt_link"/>
    <child link="head_link"/>
    <origin xyz="0 0 0.04" rpy="0 0 0" />
    <axis xyz="0 0 0" />
    <limit lower="-3.1416" upper="3.1416" effort="10" velocity="3" />
  </joint>

</robot>

